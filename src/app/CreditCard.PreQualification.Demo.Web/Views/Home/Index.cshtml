@model CreditCard.PreQualification.Demo.Web.Controllers.IndexPostModel
@{
    ViewData["Title"] = "Credit Card Pre-Qualification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="py-5 text-center">
    <h1>@ViewBag.Title</h1>
    <p>Please provide some information about yourself to allow us to recommend the correct credit card for your needs.</p>
</div>

@using(Html.BeginForm()){
    <div class="row">
        <div class="col">
            @Html.ValidationSummary()
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            @Html.LabelFor(m => m.FirstName, "First name")
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>
        <div class="col-md-6 mb-3">
            @Html.LabelFor(m => m.LastName, "Last name")
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        </div>
        <div class="col-md-6 mb-3">
            <label>Date of Birth (DD/MM/YYYY)</label>
            <div class="input-group">
                @Html.TextBoxFor(m => m.BirthDay, new { @type = "number", @class = "form-control", placeholder="DD", min=1, max=31 })
                @Html.TextBoxFor(m => m.BirthMonth, new { @type = "number", @class = "form-control", placeholder="MM", min=1, max=12 })
                @Html.TextBoxFor(m => m.BirthYear, new { @type = "number", @class = "form-control", placeholder="YYYY" })
            </div>
        </div>
        <div class="col-md-6 mb-3">
            @Html.LabelFor(m => m.AnnualIncome, "Annual Income")
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">£</span>
                </div>
                @Html.TextBoxFor(m => m.AnnualIncome, new { @type="number", @class = "form-control" })
            </div>
        
        </div>
    </div>

    <button class="btn btn-primary btn-lg btn-block" type="submit">Submit</button>
}